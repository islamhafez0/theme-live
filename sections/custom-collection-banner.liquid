{% if section.settings.banner %}
  
  <div id="sid-{{ section.id }}"
    class="custom-collection-banner-main
      custom-collection-banner-main--banner
      {% if collection.metafields.custom.featured_image == blank and collection.image == blank %}custom-collection-banner-main--banner-no-image{% endif %}
    "
    style="
      --padding_top_bottom: {{ section.settings.padding_top_bottom }}px;
      --padding_left_right: {{ section.settings.padding_left_right }}px;
      --heading_font_size: {{ section.settings.heading_font_size }}px;
      --heading_font_weight: {{ section.settings.heading_font_weight }}px;
      --heading_color: {{ section.settings.heading_color }}px;

      {% if collection.metafields.custom.featured_image != blank %}
        --banner_image: url({{ collection.metafields.custom.featured_image | img_url: '2000x' }});
      {% elsif collection.image != blank %}
        --banner_image: url({{ collection.image | img_url: '2000x' }});
      {% else %}
        --banner_image: ;
      {% endif %}
    ">
      
    <div class="custom-collection-banner-text">
      {% if collection.metafields.custom.collection_banner_title != blank %}
        <h2 class="custom-collection-banner-heading">
          {{- collection.metafields.custom.collection_banner_title -}}
        </h2>
      {% endif %}
      <div class="cq-custom-banner-description">{{ collection.description }}</div>
    </div>

    <div class="custom-collection-banner-image"></div>
    
  </div>

{% else %}

  <div id="sid-{{ section.id }}"
    class="custom-collection-banner-main
      custom-collection-banner-main--regular
      {% if collection.metafields.custom.featured_image == blank and collection.image == blank %}custom-collection-banner-main--regular-no-image{% endif %}
    "
    style="
      --padding_top_bottom: {{ section.settings.padding_top_bottom }}px;
      --padding_left_right: {{ section.settings.padding_left_right }}px;
      --heading_font_size: {{ section.settings.heading_font_size }}px;
      --heading_font_weight: {{ section.settings.heading_font_weight }}px;
      --heading_color: {{ section.settings.heading_color }}px;
    ">

    <div class="custom-collection-banner-text">
      <div class="custom-collection-banner-box">
        {% if collection.metafields.custom.collection_banner_title != blank %}
          <h2 class="custom-collection-banner-heading">
            {{- collection.metafields.custom.collection_banner_title -}}
          </h2>
        {% elsif collection.url == 'collections/all' %}
          <h2 class="custom-collection-banner-heading">SHOP ALL - Clean, Effective, Natural always</h2>
        {% endif %}

        <div class="cq-custom-banner-description">{{ collection.description }}</div>
        <span class="hr"></span>
      </div>
    </div>
    
    {% if collection.metafields.custom.featured_image != blank %}
      <div class="custom-collection-banner-image">
        <img src="{{ collection.metafields.custom.featured_image | img_url: '1200x' }}">
      </div>
    {% elsif collection.image != blank %}
      <div class="custom-collection-banner-image">
        <img src="{{ collection.image | img_url: '1200x' }}">
      </div>
    {% endif %}

  </div>

{% endif %}

{% schema %}
{
  "name": "Collection Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "banner",
      "label": "Background Image Bannner",
      "default": true
    },

    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Eliquid"
    },
    {
      "type": "richtext",
      "id": "customDescription",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section Desktop Settings"
    },
    {
      "type": "range",
      "id": "padding_top_bottom",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Top Bottom Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_left_right",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Right Left Padding",
      "default": 40
    },
      {
      "type": "header",
      "content": "Mobile Responsive Settings"
    },
     {
      "type": "range",
      "id": "padding_top_bottom_mobile",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Top Bottom Padding On Mobile",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_left_right_mobile",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Right Left Padding On Mobile",
      "default": 20
    },
      {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "heading_font_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Heading Font Weight",
      "default": 400
    },
    {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#197BBD"
     }
  ],
   "presets": [
  {
    "name": "Custom Collection Banner"
  }
]
}
{% endschema %}
