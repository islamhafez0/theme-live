<div class="custom_testimonail {{ section.id }}">
  <div class="custom_testimonail_container">
    <div class="custom_testimonail_box">
      {% for block in section.blocks %}
        <div class="testimonail_slider">
          <div class="testimonial_heading">
            <h2>{{ section.settings.heading }}</h2>
          </div>
          <div class="testimonail_slider_heading">
            <h2>{{ block.settings.heading }}</h2>
          </div>
          <div class="testimonail_slider_star">
            {% for i in (1..block.settings.ratting) %}
              {% if i > block.settings.ratting %}
                {% break %}
              {% else %}
                <img src="{{ section.settings.star_img | img_url: 'master' }}">
              {% endif %}
            {% endfor %}
          </div>
          <div class="testimonail_slider_para">
            <h3>{{ block.settings.para }}</h3>
          </div>
          {% if block.settings.image != blank %}
            <div class="testimonial_slider_image">
              {% render 'picture-element', image: block.settings.image, size: '430x300' %}
            </div>
          {% endif %}
          <div class="testimonail_slider_btn">
            <a class="btn" href="{{ block.settings.btn_link }}">{{ block.settings.btn_text }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .{{ section.id }} .testimonail_slider_star img{
    width: 16px;
    height: 16px;
    margin-right: 6px;
  }
  .{{ section.id }} .custom_testimonail{
    {% if section.settings.back_image != blank %}
    background-image: url('{{ section.settings.back_image | img_url: 'master' }}');
    {% endif %}
    width: 100%;
    height: 80vh;
  }
  .{{ section.id }} .testimonial_heading h2 p{
    font-size: {{ section.settings.heading_text_fz }}px;
    line-height: 1.8em;
    letter-spacing: 1.1px;
    font-family: brandonGrotesque;
    color: {{ section.settings.heading_text_fc }};
    font-weight: {{ section.settings.heading_text_fw }};
    text-align: center;
    margin-bottom: 40px;
  }
  .{{ section.id }} .custom_testimonail_box{
    max-width: 700px;
    width: 100%;
    margin:65px auto;
    {% comment %}     display: flex;
        align-items: center;
        justify-content: space-between; {% endcomment %}
    padding: 0 50px;
  }
  .{{ section.id }} .testimonail_slider{
    width: 100%;
    padding: 0 10px;
    text-align: center;
  }
  .{{ section.id }} .testimonail_slider_heading h2 p{
    font-size: {{ section.settings.title_text_fz }}px;
    line-height: 1.8em;
    letter-spacing: .6px;
    font-family: BrandonGrotesque;
    color: {{ section.title_text_fc }};
    font-weight: {{ section.settings.title_text_fw }};
    margin-bottom: 10px;
  }
  .{{ section.id }} .testimonail_slider_heading{
    border-bottom: 1px solid #121212;
    border: none;
  }
  .{{ section.id }} .testimonail_slider_para h3 p{
    font-size: {{ section.settings.para_text_fz }}px;
    line-height: 1.8em;
    letter-spacing: 0px;
    font-family: BrandonGrotesque;
    color: {{ section.settings.para_text_fc }};
    font-weight: {{ section.settings.para_text_fw }};
  }
  .{{ section.id }} .testimonail_slider_btn a p{
    font-size: {{ section.settings.btn_text_fz }}px;
    font-weight: {{ section.settings.btn_text_fw }};
    background-color: transparent;
    color: {{ section.settings.btn_text_fc }};
    font-family: BrandonGrotesque;
    text-decoration: none;
    line-height: 1.5em;
  }
  .{{ section.id }} .testimonail_slider_btn a{
    text-decoration: none;
  }
  .{{ section.id }} .testimonail_slider_star{
    margin-top: 0px;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .{{ section.id }} .testimonail_slider_btn{
    margin-top: 20px;
  }
  .{{ section.id }} .slick-arrow{
    width: 24px;
    height: 24px;
    background-color: #eaeaea;
    position: relative;
    transition: 1s;
    opacity: 0;
    z-index: 9;
  }
  .{{ section.id }} .slick-arrow:first-child{
    left: 0;
  }
  .{{ section.id }} .slick-arrow:last-child{
    right: 0;
  }

  .{{ section.id }} .custom_testimonail_box:hover .slick-arrow:nth-child(2){
    right: 3%;
    opacity: 1;
  }
  .{{ section.id }} .custom_testimonail_box:hover .slick-arrow:nth-child(1){
    left: 3%;
    opacity: 1;
  }
  .{{ section.id }} .slick-dots li.slick-active button:before{
    opacity: 1 !important;
    color: #869791 !important;
  }
  .{{ section.id }} .slick-dots li button:before{
    opacity: 1 !important;
    color: #d6d6d6 !important;
    font-size: 12px !important;
  }
  .{{ section.id }} .slick-dots{
    left: 0 !important;
  }

  @media only screen and (max-width:767px){
    .{{ section.id }} .testimonail_slider{
      text-align: center;
    }
    .{{ section.id }} .testimonail_slider_star{
      justify-content: center;
    }
    .{{ section.id }} .testimonail_slider_heading h2 p{
      font-size: {{ section.settings.title_text_fz_mb }}px;
    }
    .{{ section.id }} .testimonail_slider_para h3 p{
      font-size: {{ section.settings.para_text_fz_mb }}px;
    }
    .{{ section.id }} .testimonail_slider_btn a p{
      font-size: {{ section.settings.btn_text_fz_mb }}px;
    }
    .{{ section.id }} .testimonial_heading h2 p{
      font-size: {{ section.settings.heading_text_fz_mb }}px;
      margin-bottom: 20px;
    }
    .{{ section.id }} .custom_testimonail_box{
      padding: 0 20px;
    }
  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
  $('.custom_testimonail_box').slick({
    slidesToShow: 1,
   slidesToScroll: 1,
   autoplay: {{ section.settings.slick_autoplay }},
   autoplaySpeed: {{ section.settings.slick_autoplay_speed }},
    dots: {{ section.settings.slick_dots }},
    arrows: {{ section.settings.slick_arrow }},
    centerPadding: '60px',
    prevArrow:'<img src="{{ section.settings.pre_arrow | img_url: 'master' }}"/>',
    nextArrow:'<img src="{{ section.settings.next_arrow | img_url: 'master' }}"/>',
    cssEase: 'linear',
    responsive: [
      {
       breakpoint: 1200,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 990,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 768,
       settings: {
         arrows: false,
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 600,
       settings: {
         arrows: false,
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     }
   ]
  });
  });
</script>

