{% assign ss = section.settings %}

{% if ss.tag != blank and template.name == 'product' %}
  {% unless product.tags contains ss.tag %}
    <style>
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    </style>
  {% endunless %}
{% endif %}

{% if ss.display_on == 'desktop-only' %}
  <style>
    @media screen and (max-width: 834px) {
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    }
  </style>
{% endif %}

{% if ss.display_on == 'tablet-only' %}
  <style>
    @media screen and (min-width: 835px) {
      #shopify-section-{{ section.id }} {
        display: none !important;
      }
    }
  </style>
{% endif %}

{% if ss.header_offset %}
  <style>
    #shopify-section-{{ section.id }} {
      margin-top: calc(var(--header-main-height) * -1)!important;
    }
  </style>
{% endif %}